@page
@model HomeWork20.Pages.RecordsBookModel
@{
    ViewData["Title"] = "Записная книжка";
}

<h1 class="text-black-50">Записная книжка</h1>
<div class="row">

    @foreach (var item in Model.records)
    {
        <div class="col-sm-3">
            <div class="card-deck">
                <div class="card m-3">
                    <div class="text-center">
                        <h3>@item.LastName</h3>
                    </div>

                    <div>
                        <img class="card-img-top" photo src="~/photo/avatar-159236_960_720.png" />
                    </div>
                    <h4>
                        <a asp-page="/RecordPage" asp-route-ID="@item.ID" class="btn btn-info">
                            ID: @item.ID
                        </a>
                    </h4>
                    <h4>@item.FirstName</h4>
                    <h4>@item.MiddleName</h4>
                </div>
            </div>
        </div>
    }

</div>