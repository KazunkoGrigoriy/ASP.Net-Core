@page
@model HomeWork20.Pages.RecordPageModel
@{
}

<h1>Информация о записи</h1>
<div class="col-sm-3">
    <div class="card-deck">
        <div class="card m-3">
            <div class="text-center">
                <h2>@Model.record.LastName</h2>
            </div>
            <div>
                <img class="card-img-top" photo src="~/photo/avatar-159236_960_720.png" />
            </div>
            <h3>@Model.record.FirstName</h3>
            <h3>@Model.record.MiddleName</h3>
            <h3>@Model.record.Adress</h3>
            <h3>@Model.record.Description</h3>
        </div>
    </div>
</div>